<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_itemUrl"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:text="URL"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_itemName"
        app:layout_constraintStart_toEndOf="@+id/id_itemName"
        app:layout_constraintTop_toTopOf="@+id/id_itemName" />

    <Button
        android:id="@+id/b_itemMap"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:text="MAP"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_itemName"
        app:layout_constraintStart_toEndOf="@+id/b_itemUrl"
        app:layout_constraintTop_toTopOf="@+id/id_itemName"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>